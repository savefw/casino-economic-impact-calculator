window.toggleManualControls = function() {
    const controls = document.getElementById('manual-controls');
    const btn = document.getElementById('btn-manual-toggle');
    const icon = btn.querySelector('.material-symbols-outlined');
    if (controls.classList.contains('max-h-0')) {
        controls.classList.remove('max-h-0', 'opacity-0');
        controls.classList.add('max-h-[8000px]', 'opacity-100');
        icon.style.transform = 'rotate(180deg)';
    } else {
        controls.classList.add('max-h-0', 'opacity-0');
        controls.classList.remove('max-h-[8000px]', 'opacity-100');
        icon.style.transform = 'rotate(0deg)';
    }
};
