            {
                const loadingTask = pdfjsLib.getDocument(pdfUrl);
                const pdf = await loadingTask.promise;
                const numPages = pdf.numPages;

                // Render pages
                // Determine scale based on screen
                const isMobile = window.innerWidth < 768;
                const scale = window.devicePixelRatio || 1.5;

                bookEl.innerHTML = '';

                // We need to measure page 1 to set aspect ratio
                const page1 = await pdf.getPage(1);
                const viewport1 = page1.getViewport({ scale: 1 });
                const aspectRatio = viewport1.width / viewport1.height;

                // Desired display width per page (single page view on mobile, double on desktop usually?)
                // PageFlip decides single/double based on size.

                for (let i = 1; i <= numPages; i++)
                {
                    const page = await pdf.getPage(i);
                    const viewport = page.getViewport({ scale: scale * 1.5 }); // High res render

                    const pageContainer = document.createElement('div');
                    pageContainer.className = "page relative"; // Generic class with relative positioning

                    const canvas = document.createElement('canvas');
                    canvas.width = viewport.width;
                    canvas.height = viewport.height;
                    canvas.style.width = "100%";
                    canvas.style.height = "100%";
                    canvas.style.objectFit = "contain";

                    pageContainer.appendChild(canvas);

                    // --- Annotation Layer (Links) ---
                    try
                    {
                        const annotations = await page.getAnnotations();
                        if (annotations && annotations.length > 0)
                        {
                            const annotationLayer = document.createElement('div');
                            annotationLayer.className = 'absolute inset-0 pointer-events-none'; // Container

                            annotations.forEach(annotation =>
                            {
                                if (annotation.subtype === 'Link' && annotation.dest)
                                {
                                    const rect = viewport.convertToViewportRectangle(annotation.rect);
                                    // rect is [xMin, yMin, xMax, yMax]
                                    // Normalize to percentages to be scaling-invariant
                                    const x = rect[0];
                                    const y = rect[1];
                                    const w = rect[2] - rect[0];
                                    const h = rect[3] - rect[1];

                                    const linkDiv = document.createElement('div');
                                    linkDiv.className = 'absolute cursor-pointer hover:bg-yellow-500/20 transition-colors pointer-events-auto z-50';

                                    // Use percentages for responsiveness
                                    linkDiv.style.left = `${(x / viewport.width) * 100}%`;
                                    linkDiv.style.top = `${((viewport.height - y - h) / viewport.height) * 100}%`; // PDF Y is often inverted?
                                    // WAIT. `convertToViewportRectangle` handles coordinate system.
                                    // Usually it outputs Top-Left oriented coords [x, y, x+w, y+h]
                                    // But let's verify if standard render works.
                                    // If this is standard PDF coords, Y=0 is bottom.
                                    // But viewport transform should fix it.

                                    // Let's assume standard [x, y, w, h] from viewport transform
                                    linkDiv.style.left = `${(rect[0] / viewport.width) * 100}%`;
                                    linkDiv.style.top = `${(rect[1] / viewport.height) * 100}%`;
                                    linkDiv.style.width = `${((rect[2] - rect[0]) / viewport.width) * 100}%`;
                                    linkDiv.style.height = `${((rect[3] - rect[1]) / viewport.height) * 100}%`;

                                    // Stop propagation on all potential flip triggers
                                    const stopProp = (e) => { e.stopPropagation(); };
                                    linkDiv.addEventListener('mousedown', stopProp);
                                    linkDiv.addEventListener('touchstart', stopProp);
                                    linkDiv.addEventListener('mouseup', stopProp);
                                    linkDiv.addEventListener('touchend', stopProp);

                                    linkDiv.onclick = async (e) =>
                                    {
                                        e.preventDefault();
                                        e.stopPropagation();

                                        let dest = annotation.dest;
                                        if (typeof dest === 'string')
                                        {
                                            dest = await pdf.getDestination(dest);
                                        }
                                        if (Array.isArray(dest))
                                        {
                                            const ref = dest[0];
                                            const pageIndex = await pdf.getPageIndex(ref);
                                            // pdf.js returns 0-based index
                                            // PageFlip.flip() takes index
                                            if (flipbookInstance)
                                            {
                                                flipbookInstance.flip(pageIndex);
                                            }
                                        }
                                    };
                                    annotationLayer.appendChild(linkDiv);
                                }
                            });
                            pageContainer.appendChild(annotationLayer);
                        }
                    } catch (err)
                    {
                        console.warn('Error loading annotations:', err);
                    }
                    // --------------------------------

                    bookEl.appendChild(pageContainer);

                    const renderContext = {
                        canvasContext: canvas.getContext('2d'),
                        viewport: viewport
                    };
                    page.render(renderContext); // Async render, don't await all to show UI faster? 
                    // Better to await to ensure book structure is ready for PageFlip?
                    // PageFlip needs elements in DOM. Content can paint later.
                }

                // Initialize PageFlip
                // Mobile: 350x500 approx ratio?
                // Desktop: 500x700 per page?

                const baseWidth = isMobile ? window.innerWidth * 0.9 : 550;
                const baseHeight = baseWidth / aspectRatio;

                flipbookInstance = new St.PageFlip(bookEl, {
                    width: baseWidth,
                    height: baseHeight,

                    // Logic:
                    // size: fixed -> dimensions are strictly width/height
                    // size: stretch -> stretches to parent
                    size: 'stretch',

                    minWidth: 300,
                    maxWidth: 1000,
                    minHeight: 400,
                    maxHeight: 1400,

                    maxShadowOpacity: 0.5,
                    showCover: true,
                    mobileScrollSupport: true
                });

                flipbookInstance.loadFromHTML(document.querySelectorAll('#flipbook .page'));


                loadingEl.style.display = 'none';
                bookEl.classList.remove('hidden');

                // Show Instructions
