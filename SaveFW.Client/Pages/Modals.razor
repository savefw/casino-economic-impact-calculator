@inject IJSRuntime JSRuntime

<!-- Image Modal -->
<div id="image-modal" class="fixed inset-0 z-[1000] bg-black/90 backdrop-blur-md opacity-0 pointer-events-none transition-opacity duration-300 flex items-center justify-center p-4" onclick="closeImageModal()">
    <img id="modal-image" src="" alt="Modal View" class="max-w-full max-h-[90vh] rounded-xl shadow-2xl transform scale-95 transition-transform duration-300" onclick="event.stopPropagation()" />
    <button onclick="closeImageModal()" class="absolute top-4 right-4 p-2 text-white/50 hover:text-white transition-colors">
        <span class="material-symbols-outlined text-4xl">close</span>
    </button>
</div>

<!-- Methodology Modal -->
<div id="methodology-modal" class="fixed inset-0 z-[1000] bg-black/80 backdrop-blur-sm opacity-0 pointer-events-none transition-opacity duration-300 flex items-center justify-center p-4" onclick="if(event.target === this) closeMethodologyModal()">
    <div class="bg-white dark:bg-slate-900 rounded-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto overscroll-contain shadow-2xl border border-slate-200 dark:border-slate-800 relative">
        <div class="sticky top-0 bg-white/95 dark:bg-slate-900/95 backdrop-blur-md px-6 py-4 border-b border-slate-200 dark:border-slate-800 flex items-center justify-between z-10">
            <h3 class="text-xl font-bold text-slate-900 dark:text-white flex items-center gap-2">
                <span class="material-symbols-outlined text-blue-500">science</span>
                Research Methodology
            </h3>
            <button onclick="closeMethodologyModal()" class="p-2 hover:bg-slate-100 dark:hover:bg-slate-800 rounded-full transition-colors">
                <span class="material-symbols-outlined text-slate-500">close</span>
            </button>
        </div>
        <div class="p-6 space-y-8 text-slate-600 dark:text-slate-300 text-sm leading-relaxed">
            <div>
                <h4 class="text-base font-bold text-slate-900 dark:text-white mb-2 uppercase tracking-wider flex items-center gap-2">
                    <span class="material-symbols-outlined text-blue-500 text-[18px]">travel_explore</span>
                    Distance-Based Risk Modeling
                </h4>
                <p>Populations living closer to a casino experience significantly higher rates of gambling addiction. Multipliers:</p>
                <ul class="list-disc pl-5 mt-2 space-y-1">
                    <li><strong>&lt; 10 Miles:</strong> 2.0x Risk Multiplier</li>
                    <li><strong>10 - 20 Miles:</strong> 1.5x Risk Multiplier</li>
                    <li><strong>&gt; 20 Miles:</strong> 1.0x (Baseline)</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Simulator Modal -->
<div id="simulator-modal" class="fixed inset-0 z-[1000] hidden opacity-0 transition-opacity duration-300" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="absolute inset-0 bg-slate-900/90 backdrop-blur-sm" onclick="closeSimulatorModal()"></div>
    <div class="fixed inset-0 z-10 flex items-center justify-center p-4">
        <div class="relative bg-slate-800 border border-slate-700 rounded-2xl w-full max-w-4xl shadow-2xl overflow-hidden">
            <div class="bg-slate-900/50 px-6 py-4 border-b border-slate-700">
                <div class="flex justify-between items-center">
                    <h3 class="text-xl font-bold text-white">Economic Impact Simulator</h3>
                    <button onclick="closeSimulatorModal()"><span class="material-symbols-outlined text-slate-400">close</span></button>
                </div>
                <div class="grid grid-cols-3 gap-4 w-full mt-6">
                    <div class="flex flex-col gap-2 cursor-pointer" onclick="goToSimStep(1)">
                        <div id="sim-bar-1" class="h-1.5 w-full bg-emerald-500 rounded-full"></div>
                        <span id="sim-label-1" class="text-[10px] font-bold text-emerald-400 uppercase">Revenue</span>
                    </div>
                    <div class="flex flex-col gap-2 cursor-pointer" onclick="goToSimStep(2)">
                        <div id="sim-bar-2" class="h-1.5 w-full bg-slate-700 rounded-full"></div>
                        <span id="sim-label-2" class="text-[10px] font-bold text-slate-600 uppercase">Allocation</span>
                    </div>
                    <div class="flex flex-col gap-2 cursor-pointer" onclick="goToSimStep(3)">
                        <div id="sim-bar-3" class="h-1.5 w-full bg-slate-700 rounded-full"></div>
                        <span id="sim-label-3" class="text-[10px] font-bold text-slate-600 uppercase">Social Costs</span>
                    </div>
                </div>
            </div>

            <div class="px-6 py-6 h-[500px] flex flex-col overflow-y-auto" id="sim-content-container">
                <!-- Step 1: Revenue -->
                <div id="sim-step-1" class="sim-step w-full h-full flex flex-col justify-start transition-all duration-300">
                    <label class="text-sm font-bold text-slate-400 uppercase block mb-3">1. Select AGR Scenario</label>
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-3">
                        <label class="cursor-pointer group relative">
                            <input type="radio" name="sim-agr" value="43" class="peer sr-only">
                            <div class="p-4 rounded-xl bg-slate-700/50 border-2 border-slate-600 peer-checked:border-emerald-500 peer-checked:bg-emerald-500/10 h-full flex flex-col">
                                <div class="text-lg font-black text-white">$43 MM</div>
                                <div class="text-xs text-slate-400">Spectrum (Tribal Comp)</div>
                            </div>
                        </label>
                        <label class="cursor-pointer group relative">
                            <input type="radio" name="sim-agr" value="112" class="peer sr-only" checked>
                            <div class="p-4 rounded-xl bg-slate-700/50 border-2 border-slate-600 peer-checked:border-emerald-500 peer-checked:bg-emerald-500/10 h-full flex flex-col">
                                <div class="text-lg font-black text-white">$112 MM</div>
                                <div class="text-xs text-slate-400">Spectrum (Primary)</div>
                            </div>
                        </label>
                        <label class="cursor-pointer group relative">
                            <input type="radio" name="sim-agr" value="204" class="peer sr-only">
                            <div class="p-4 rounded-xl bg-slate-700/50 border-2 border-slate-600 peer-checked:border-emerald-500 peer-checked:bg-emerald-500/10 h-full flex flex-col">
                                <div class="text-lg font-black text-white">$204 MM</div>
                                <div class="text-xs text-slate-400">Spectrum (No Tribal)</div>
                            </div>
                        </label>
                        <label class="cursor-pointer group relative">
                            <input type="radio" name="sim-agr" value="330" class="peer sr-only">
                            <div class="p-4 rounded-xl bg-slate-700/50 border-2 border-slate-600 peer-checked:border-blue-500 peer-checked:bg-blue-500/10 h-full flex flex-col">
                                <div class="text-lg font-black text-white">$330 MM</div>
                                <div class="text-xs text-slate-400">Union Gaming (FWFirst)</div>
                            </div>
                        </label>
                    </div>
                </div>

                <!-- Step 2: Allocation -->
                <div id="sim-step-2" class="sim-step w-full h-full flex flex-col justify-start hidden transition-all duration-300">
                    <label class="text-sm font-bold text-slate-400 uppercase block mb-3">2. Tax Allocation Strategy</label>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <label class="flex items-center p-3 rounded-lg border border-slate-600 bg-slate-700/30 cursor-pointer">
                            <input type="radio" name="sim-alloc" value="10" class="w-4 h-4 text-purple-500">
                            <div class="ml-3">
                                <span class="block text-sm font-bold text-white">General Fund Focus</span>
                                <span class="block text-xs text-slate-400">10% Humanitarian / 90% General</span>
                            </div>
                        </label>
                        <label class="flex items-center p-3 rounded-lg border-2 border-purple-500/50 bg-purple-900/10 cursor-pointer">
                            <input type="radio" name="sim-alloc" value="40" class="w-4 h-4 text-purple-500" checked>
                            <div class="ml-3">
                                <span class="block text-sm font-bold text-white">SaveFW Default</span>
                                <span class="block text-xs text-slate-400">40% Humanitarian / 60% General</span>
                            </div>
                        </label>
                    </div>
                </div>

                <!-- Step 3: Social Costs -->
                <div id="sim-step-3" class="sim-step w-full h-full flex flex-col justify-start hidden transition-all duration-300">
                    <label class="text-sm font-bold text-slate-400 uppercase block mb-3">3. Social Cost Sensitivity</label>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <label class="flex items-center p-3 rounded-lg border-2 border-red-500/50 bg-red-900/10 cursor-pointer">
                            <input type="radio" name="sim-cost" value="1.0" class="w-4 h-4 text-red-500" checked>
                            <div class="ml-3"><span class="block text-sm font-bold text-white">Baseline</span></div>
                        </label>
                        <label class="flex items-center p-3 rounded-lg border border-slate-600 bg-slate-700/30 cursor-pointer">
                            <input type="radio" name="sim-cost" value="1.2" class="w-4 h-4 text-red-500">
                            <div class="ml-3"><span class="block text-sm font-bold text-white">Aggressive (+20%)</span></div>
                        </label>
                    </div>
                </div>
            </div>

            <div class="bg-slate-900/50 px-6 py-4 border-t border-slate-700 flex justify-between items-center">
                <button id="sim-btn-back" onclick="prevSimStep()" class="hidden px-6 py-3 rounded-xl bg-red-600 text-white font-bold">Back</button>
                <button id="sim-btn-cancel" onclick="closeSimulatorModal()" class="px-6 py-3 rounded-xl bg-red-600 text-white font-bold">Cancel</button>
                <div class="flex gap-3">
                    <button id="sim-btn-next" onclick="nextSimStep()" class="px-6 py-3 rounded-xl bg-blue-600 text-white font-bold">Next</button>
                    <button id="sim-btn-run" onclick="runSimulation()" class="hidden px-6 py-3 rounded-xl bg-gradient-to-r from-blue-600 to-cyan-500 text-white font-bold">Run Simulation</button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("window.Modals.init");
        }
    }
}