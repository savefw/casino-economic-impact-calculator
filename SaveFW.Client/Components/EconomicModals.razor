@namespace SaveFW.Client.Components

    <!-- Methodology Modal -->
    <div id="methodology-modal"
        class="fixed inset-0 z-[1000] bg-black/80 backdrop-blur-sm opacity-0 pointer-events-none transition-opacity duration-300 flex items-center justify-center p-4"
        onclick="if(event.target === this) closeMethodologyModal()">
        <div
            class="bg-white dark:bg-slate-900 rounded-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto overscroll-contain shadow-2xl border border-slate-200 dark:border-slate-800 relative">
            <!-- Header -->
            <div
                class="sticky top-0 bg-white/95 dark:bg-slate-900/95 backdrop-blur-md px-6 py-4 border-b border-slate-200 dark:border-slate-800 flex items-center justify-between z-10">
                <h3 class="text-xl font-bold text-slate-900 dark:text-white flex items-center gap-2">
                    <span class="material-symbols-outlined text-blue-500">science</span>
                    Research Methodology
                </h3>
                <button onclick="closeMethodologyModal()"
                    class="p-2 hover:bg-slate-100 dark:hover:bg-slate-800 rounded-full transition-colors">
                    <span class="material-symbols-outlined text-slate-500">close</span>
                </button>
            </div>

            <!-- Content -->
            <div class="p-6 space-y-8 text-slate-600 dark:text-slate-300 text-sm leading-relaxed">

                <!-- Section 1: Methodology -->
                <div class="space-y-6">
                    <div>
                        <h4
                            class="text-base font-bold text-slate-900 dark:text-white mb-2 uppercase tracking-wider flex items-center gap-2">
                            <span class="material-symbols-outlined text-blue-500 text-[18px]">travel_explore</span>
                            Distance-Based Risk Modeling
                        </h4>
                        <p class="mb-3">
                            Populations living closer to a casino experience significantly higher rates of gambling
                            addiction.
                            Our model applies distance-decay multipliers based on peer-reviewed research:
                        </p>
                        <ul class="list-disc pl-5 space-y-1">
                            <li><strong>&lt; 10 Miles:</strong> 2.0x Risk Multiplier</li>
                            <li><strong>10 - 20 Miles:</strong> 1.5x Risk Multiplier</li>
                            <li><strong>&gt; 20 Miles:</strong> 1.0x (Baseline State Average)</li>
                        </ul>
                    </div>

                    <div>
                        <h4
                            class="text-base font-bold text-slate-900 dark:text-white mb-2 uppercase tracking-wider flex items-center gap-2">
                            <span class="material-symbols-outlined text-blue-500 text-[18px]">calculate</span>
                            Problem Gambler Estimation
                        </h4>
                        <div
                            class="bg-slate-100 dark:bg-slate-800 p-3 rounded font-mono text-xs border border-slate-200 dark:border-slate-700 mb-2">
                            New Addicts = Σ (Pop × Base_Rate × Multiplier)
                        </div>
                        <p class="text-xs italic text-slate-500 mb-2">
                            *Population data sourced from <strong>US Census Bureau (2020 Decennial)</strong> at
                            Block
                            Group level.
                        </p>
                        <p class="text-xs italic text-slate-500">
                            *Baseline rate derived from National Council on Problem Gambling (NCPG) surveys.
                        </p>
                    </div>

                    <div>
                        <h4
                            class="text-base font-bold text-slate-900 dark:text-white mb-2 uppercase tracking-wider flex items-center gap-2">
                            <span class="material-symbols-outlined text-blue-500 text-[18px]">attach_money</span>
                            Social Cost Valuation
                        </h4>
                        <p>
                            We calculate the economic impact (bankruptcy, crime, divorce, job loss) per addict using
                            inflation-adjusted values.
                        </p>
                        <div
                            class="mt-2 bg-red-50 dark:bg-red-900/10 border border-red-100 dark:border-red-900/30 p-3 rounded-lg inline-block">
                            <span class="font-semibold text-slate-900 dark:text-white">~$13,203 per
                                addict/year</span>
                            <span class="text-slate-500 text-xs block mt-1">(Adjusted from ~$9,393 in 2011)</span>
                        </div>
                    </div>
                </div>

                <!-- Divider -->
                <div class="border-t border-slate-200 dark:border-slate-700"></div>

                <!-- Section 2: Citations -->
                <div>
                    <h4 class="text-sm font-bold text-slate-900 dark:text-white mb-4 uppercase tracking-wider">
                        Citations
                        & Sources</h4>
                    <div class="space-y-4 text-xs">
                        <!-- Welte -->
                        <div
                            class="bg-slate-50 dark:bg-slate-800/30 p-3 rounded border border-slate-100 dark:border-slate-800">
                            <a href="https://pubmed.ncbi.nlm.nih.gov/26615561/" target="_blank"
                                class="font-bold text-blue-600 hover:underline mb-1 block">
                                Welte JW, Barnes GM, Tidwell MO, Hoffman JH, Wieczorek WF.
                            </a>
                            <p class="text-slate-500 mb-1">
                                The Relationship Between Distance from Gambling Venues and Gambling Participation
                                and
                                Problem Gambling Among U.S. Adults. J Gambl Stud. 2016 Dec;32(4):1055-1063.
                            </p>
                            <span class="text-slate-400">doi: 10.1007/s10899-015-9583-5. PMID: 26615561.</span>
                        </div>

                        <!-- Grimsley -->
                        <div
                            class="bg-slate-50 dark:bg-slate-800/30 p-3 rounded border border-slate-100 dark:border-slate-800">
                            <a href="https://www.senate.ga.gov/committees/Documents/HiddenCostsofGam.pdf"
                                target="_blank" class="font-bold text-blue-600 hover:underline mb-1 block">
                                Grimsley (2011) / Grinols
                            </a>
                            <p class="text-slate-500">
                                Inflation-adjusted valuation of social costs per problem gambler (bankruptcy, crime,
                                divorce, job loss).
                            </p>
                        </div>

                        <!-- Data Sources -->
                        <div
                            class="bg-slate-50 dark:bg-slate-800/30 p-3 rounded border border-slate-100 dark:border-slate-800">
                            <span class="font-bold text-slate-700 dark:text-slate-200 mb-1 block">Geospatial Data
                                Sources</span>
                            <p class="text-slate-500">
                                Population and boundary data aggregated via <a href="https://censusreporter.org"
                                    target="_blank"
                                    class="font-bold text-blue-600 hover:underline">CensusReporter.org</a> (Source:
                                U.S.
                                Census Bureau, 2020 Decennial Block Groups). Data files were processed, merged, and
                                simplified using <a href="https://mapshaper.org" target="_blank"
                                    class="font-bold text-blue-600 hover:underline">Mapshaper.org</a>. Map
                                visualization
                                © OpenStreetMap contributors.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sources Modal -->
    <div id="sources-modal"
        class="fixed inset-0 z-[1000] bg-black/80 backdrop-blur-sm opacity-0 pointer-events-none transition-opacity duration-300 flex items-center justify-center p-4"
        onclick="if(event.target === this) closeSourcesModal()">
        <div
            class="bg-white dark:bg-slate-900 rounded-2xl max-w-6xl w-full max-h-[90vh] overflow-y-auto overscroll-contain shadow-2xl border border-slate-200 dark:border-slate-800 relative">

            <!-- Header -->
            <div
                class="sticky top-0 bg-white/95 dark:bg-slate-900/95 backdrop-blur-md px-6 py-4 border-b border-slate-200 dark:border-slate-800 flex items-center justify-between z-10">
                <h3 class="text-xl font-bold text-slate-900 dark:text-white flex items-center gap-2">
                    <span class="material-symbols-outlined text-orange-500">campaign</span>
                    Decoding the Spin
                </h3>
                <button onclick="closeSourcesModal()"
                    class="p-2 hover:bg-slate-100 dark:hover:bg-slate-800 rounded-full transition-colors">
                    <span class="material-symbols-outlined text-slate-500">close</span>
                </button>
            </div>

            <!-- Content -->
            <div class="p-8 space-y-10 text-black dark:text-white text-lg leading-relaxed">

                <div class="border-l-8 border-blue-600 dark:border-blue-500 pl-6 bg-transparent">
                    <p class="font-bold italic text-black dark:text-white text-xl leading-tight">
                        "The words you see on these reels aren't random. They are a direct comparison between the
                        marketing promises being sold to Fort Wayne and the documented reality of casino impacts."
                    </p>
                </div>

                <div class="bg-yellow-50 dark:bg-yellow-900/20 p-6 border-l-8 border-yellow-500">
                    <h4 class="font-bold text-black dark:text-white mb-4 text-xl uppercase tracking-wider">Why This
                        Matters</h4>
                    <p class="text-lg font-medium leading-relaxed text-black dark:text-white">
                        The "Near Miss" effect on this machine—where you see "JOBS" just one click away from
                        "ADDICTION"—mirrors the deceptive nature of FWFirst's marketing campaign. We are being sold the
                        <em>possibility</em> of prosperity while the <em>probability</em> points to social cost.
                    </p>
                </div>

                <div class="grid md:grid-cols-2 gap-x-12 gap-y-6 items-start">
                    <!-- Row 1: Headers -->
                    <h4
                        class="text-emerald-700 dark:text-emerald-400 font-bold uppercase tracking-widest text-xl flex items-center gap-2">
                        <span class="material-symbols-outlined text-2xl">verified</span>
                        The Pitch (Bait)
                    </h4>
                    <h4
                        class="text-red-700 dark:text-red-400 font-bold uppercase tracking-widest text-xl flex items-center gap-2">
                        <span class="material-symbols-outlined text-2xl">warning</span>
                        The Reality (Hook)
                    </h4>

                    <!-- Row 2: Descriptions -->
                    <div class="space-y-2">
                        <p class="text-lg">
                            Phrases taken directly from <strong><a href="https://fwfirst.com/" target="_blank"
                                    class="underline hover:text-emerald-600 transition-colors">FWFirst's</a></strong>
                            marketing materials and Mayor Tucker's press releases.
                        </p>
                        <span class="block text-sm text-slate-500 dark:text-slate-400">
                            Note: Since the website's content may change, SaveFW has <a
                                href="https://web.archive.org/web/20251224153405/https://fwfirst.com/" target="_blank"
                                class="underline hover:text-blue-500 transition-colors">archived a copy of FWFirst's
                                website</a> as of December 24, 2025.
                        </span>
                    </div>
                    <p class="text-lg">
                        Outcomes cited in independent studies, opposition testimony, and crime statistics from similar
                        markets.
                    </p>

                    <!-- Row 3: Lists -->
                    <ul id="bait-list" class="space-y-3">
                        <!-- Populated by JS -->
                    </ul>
                    <ul id="hook-list" class="space-y-3">
                        <!-- Populated by JS -->
                    </ul>
                </div>
            </div>

            <!-- Mini Modal for Word Details -->
            <div id="word-detail-modal"
                class="absolute inset-0 z-[150] opacity-0 pointer-events-none transition-opacity duration-300 flex items-center justify-center p-4 md:p-8"
                onclick="if(event.target === this) closeWordModal()">

                <div class="bg-white dark:bg-slate-900 rounded-2xl max-w-2xl w-full shadow-2xl border border-slate-200 dark:border-slate-700 relative transform transition-transform scale-95 z-10 overflow-hidden"
                    id="word-modal-content">

                    <!-- Close Button -->
                    <button onclick="closeWordModal()"
                        class="absolute top-4 right-4 p-2 hover:bg-slate-100 dark:hover:bg-slate-800 rounded-full transition-colors z-30">
                        <span class="material-symbols-outlined text-slate-500">close</span>
                    </button>

                    <div class="flex items-stretch min-h-[300px]">
                        <!-- Left Arrow -->
                        <button onclick="prevWord()"
                            class="group px-4 hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors border-r border-slate-100 dark:border-slate-800">
                            <span
                                class="material-symbols-outlined text-slate-400 group-hover:text-red-500 transition-colors text-3xl">arrow_back_ios_new</span>
                        </button>

                        <!-- Main Content -->
                        <div class="flex-1 p-8 flex flex-col justify-center">
                            <h3 id="word-modal-title"
                                class="text-2xl font-black text-red-600 dark:text-red-500 mb-4 uppercase tracking-wide">
                            </h3>
                            <p id="word-modal-desc"
                                class="text-base text-slate-600 dark:text-slate-300 mb-6 leading-relaxed"></p>
                            <div>
                                <a id="word-modal-link" href="#" target="_blank"
                                    class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-500 font-bold uppercase text-sm tracking-wider">
                                    <span>View Source</span>
                                    <span class="material-symbols-outlined text-sm">open_in_new</span>
                                </a>
                            </div>
                        </div>

                        <!-- Right Arrow -->
                        <button onclick="nextWord()"
                            class="group px-4 hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors border-l border-slate-100 dark:border-slate-800">
                            <span
                                class="material-symbols-outlined text-slate-400 group-hover:text-red-500 transition-colors text-3xl">arrow_forward_ios</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scenario Simulator Modal -->
    <div id="simulator-modal" class="fixed inset-0 z-[1000] hidden opacity-0 transition-opacity duration-300"
        aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <!-- Backdrop -->
        <div class="absolute inset-0 bg-slate-900/90 backdrop-blur-sm transition-opacity"
            onclick="closeSimulatorModal()"></div>

        <div class="fixed inset-0 z-10 overflow-y-auto">
            <div class="flex min-h-full items-center justify-center p-4 text-center sm:p-0">
                <div
                    class="relative transform overflow-hidden rounded-2xl bg-slate-800 border border-slate-700 text-left shadow-2xl transition-all sm:my-8 sm:w-full sm:max-w-4xl">

                    <!-- Header -->
                    <div class="bg-slate-900/50 px-6 py-4 border-b border-slate-700">
                        <div class="flex justify-between items-center">
                            <h3 class="text-xl font-bold text-white flex items-center gap-2" id="modal-title">
                                <span class="material-symbols-outlined text-blue-500">science</span>
                                Economic Impact Simulator
                            </h3>
                            <button onclick="closeSimulatorModal()"
                                class="text-slate-400 hover:text-white transition-colors">
                                <span class="material-symbols-outlined">close</span>
                            </button>
                        </div>

                        <!-- Segmented Progress Bar -->
                        <div class="grid grid-cols-3 gap-4 w-full mt-6">
                            <!-- Step 1 Indicator -->
                            <div class="flex flex-col gap-2 group cursor-pointer" onclick="goToSimStep(1)">
                                <div id="sim-bar-1"
                                    class="h-1.5 w-full bg-emerald-500 rounded-full transition-all duration-300 shadow-[0_0_10px_rgba(16,185,129,0.5)]">
                                </div>
                                <span id="sim-label-1"
                                    class="text-[10px] sm:text-xs font-bold text-emerald-400 uppercase tracking-widest transition-colors duration-300">Revenue</span>
                            </div>
                            <!-- Step 2 Indicator -->
                            <div class="flex flex-col gap-2 group cursor-pointer" onclick="goToSimStep(2)">
                                <div id="sim-bar-2"
                                    class="h-1.5 w-full bg-slate-700 rounded-full transition-all duration-300"></div>
                                <span id="sim-label-2"
                                    class="text-[10px] sm:text-xs font-bold text-slate-600 uppercase tracking-widest transition-colors duration-300">Allocation</span>
                            </div>
                            <!-- Step 3 Indicator -->
                            <div class="flex flex-col gap-2 group cursor-pointer" onclick="goToSimStep(3)">
                                <div id="sim-bar-3"
                                    class="h-1.5 w-full bg-slate-700 rounded-full transition-all duration-300"></div>
                                <span id="sim-label-3"
                                    class="text-[10px] sm:text-xs font-bold text-slate-600 uppercase tracking-widest transition-colors duration-300">Social
                                    Costs</span>
                            </div>
                        </div>
                    </div>

                    <!-- Content -->
                    <div class="px-6 py-6 h-[500px] flex flex-col overflow-y-auto custom-scrollbar">

                        <!-- Step 1: Revenue Scenario -->
                        <div id="sim-step-1"
                            class="sim-step w-full h-full flex flex-col justify-start transition-all duration-300">
                            <label class="text-sm font-bold text-slate-400 uppercase tracking-wider block mb-3">1.
                                Select Adjusted Gross Revenue (AGR) Scenario</label>
                            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-3">
                                <!-- $43M -->
                                <label class="cursor-pointer group relative">
                                    <input type="radio" name="sim-agr" value="43" class="peer sr-only">
                                    <div
                                        class="p-4 rounded-xl bg-slate-700/50 border-2 border-slate-600 peer-checked:border-emerald-500 peer-checked:bg-emerald-500/10 transition-all hover:bg-slate-700 h-full flex flex-col">
                                        <div class="text-lg font-black text-white mb-1">$43 MM</div>
                                        <div class="text-xs text-slate-400 leading-tight">Spectrum Gaming (With Tribal
                                            Competition)</div>
                                    </div>
                                    <div
                                        class="absolute top-2 right-2 opacity-0 peer-checked:opacity-100 transition-opacity">
                                        <span
                                            class="material-symbols-outlined text-emerald-500 text-lg">check_circle</span>
                                    </div>
                                </label>

                                <!-- $112M (Default) -->
                                <label class="cursor-pointer group relative">
                                    <input type="radio" name="sim-agr" value="112" class="peer sr-only" checked>
                                    <div
                                        class="p-4 rounded-xl bg-slate-700/50 border-2 border-slate-600 peer-checked:border-emerald-500 peer-checked:bg-emerald-500/10 transition-all hover:bg-slate-700 h-full flex flex-col">
                                        <div class="text-lg font-black text-white mb-1">$112 MM</div>
                                        <div class="text-xs text-slate-400 leading-tight">Spectrum Gaming (Primary
                                            Projection)</div>
                                    </div>
                                    <div
                                        class="absolute top-2 right-2 opacity-0 peer-checked:opacity-100 transition-opacity">
                                        <span
                                            class="material-symbols-outlined text-emerald-500 text-lg">check_circle</span>
                                    </div>
                                </label>

                                <!-- $204M -->
                                <label class="cursor-pointer group relative">
                                    <input type="radio" name="sim-agr" value="204" class="peer sr-only">
                                    <div
                                        class="p-4 rounded-xl bg-slate-700/50 border-2 border-slate-600 peer-checked:border-emerald-500 peer-checked:bg-emerald-500/10 transition-all hover:bg-slate-700 h-full flex flex-col">
                                        <div class="text-lg font-black text-white mb-1">$204 MM</div>
                                        <div class="text-xs text-slate-400 leading-tight">Spectrum Gaming (No Tribal
                                            Competition)</div>
                                    </div>
                                    <div
                                        class="absolute top-2 right-2 opacity-0 peer-checked:opacity-100 transition-opacity">
                                        <span
                                            class="material-symbols-outlined text-emerald-500 text-lg">check_circle</span>
                                    </div>
                                </label>

                                <!-- $330M -->
                                <label class="cursor-pointer group relative">
                                    <input type="radio" name="sim-agr" value="330" class="peer sr-only">
                                    <div
                                        class="p-4 rounded-xl bg-slate-700/50 border-2 border-slate-600 peer-checked:border-blue-500 peer-checked:bg-blue-500/10 transition-all hover:bg-slate-700 h-full flex flex-col">
                                        <div class="text-lg font-black text-white mb-1">$330 MM</div>
                                        <div class="text-xs text-slate-400 leading-tight">Union Gaming (FWFirst Sales
                                            Pitch)</div>
                                    </div>
                                </label>
                            </div>

                            <!-- Custom Option -->
                            <div class="relative flex py-10 items-center">
                                <div class="flex-grow border-t border-slate-700"></div>
                                <span
                                    class="flex-shrink-0 mx-4 text-slate-500 text-xs uppercase font-bold tracking-widest">Or
                                    Enter Custom</span>
                                <div class="flex-grow border-t border-slate-700"></div>
                            </div>

                            <label
                                class="cursor-pointer group relative flex items-center p-4 rounded-xl bg-slate-700/30 border-2 border-slate-600 peer-checked:border-emerald-500 peer-checked:bg-emerald-500/10 transition-all hover:bg-slate-700/50">
                                <input type="radio" name="sim-agr" value="custom" class="peer sr-only"
                                    onchange="document.getElementById('sim-custom-agr').focus()">

                                <!-- Visible Radio (Icon Swap) -->
                                <span
                                    class="material-symbols-outlined text-slate-500 text-2xl mr-4 peer-checked:hidden transition-colors">radio_button_unchecked</span>
                                <span
                                    class="material-symbols-outlined text-emerald-500 text-2xl mr-4 hidden peer-checked:block transition-colors">check_circle</span>

                                <div class="flex-1 flex flex-col sm:flex-row sm:items-center gap-4">
                                    <div class="flex-1">
                                        <div class="text-lg font-bold text-white mb-1">Custom AGR Projection</div>
                                        <div class="text-xs text-slate-400">Enter a specific Adjusted Gross Revenue
                                            figure ($MM).</div>
                                    </div>
                                    <div class="relative w-full sm:w-48">
                                        <div
                                            class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <span class="text-slate-400 font-bold">$</span>
                                        </div>
                                        <input type="number" id="sim-custom-agr" min="0" max="1000" placeholder="112"
                                            class="w-full bg-slate-800 border border-slate-600 text-white rounded-lg py-2 pl-8 pr-12 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all font-mono font-bold text-right"
                                            oninput="document.querySelector('input[name=sim-agr][value=custom]').checked = true">
                                        <div
                                            class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                            <span class="text-slate-500 font-bold text-xs">MM</span>
                                        </div>
                                    </div>
                                </div>
                            </label>
                        </div>

                        <!-- Step 2: Allocation Strategy -->
                        <div id="sim-step-2"
                            class="sim-step w-full h-full flex flex-col justify-start hidden transition-all duration-300">
                            <label class="text-sm font-bold text-slate-400 uppercase tracking-wider block mb-3">2. Tax
                                Allocation Strategy</label>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <label
                                    class="flex items-center p-3 rounded-lg border border-slate-600 bg-slate-700/30 cursor-pointer hover:bg-slate-700/50 transition-colors">
                                    <input type="radio" name="sim-alloc" value="10"
                                        class="w-4 h-4 text-purple-500 bg-slate-800 border-slate-500 focus:ring-purple-500 focus:ring-2">
                                    <div class="ml-3">
                                        <span class="block text-sm font-bold text-white">General Fund Focus</span>
                                        <span class="block text-xs text-slate-400">10% Humanitarian / 90% General</span>
                                    </div>
                                </label>
                                <label
                                    class="flex items-center p-3 rounded-lg border-2 border-purple-500/50 bg-purple-900/10 cursor-pointer hover:bg-purple-900/20 transition-colors">
                                    <input type="radio" name="sim-alloc" value="40"
                                        class="w-4 h-4 text-purple-500 bg-slate-800 border-slate-500 focus:ring-purple-500 focus:ring-2"
                                        checked>
                                    <div class="ml-3">
                                        <span class="block text-sm font-bold text-white">SaveFW Default</span>
                                        <span class="block text-xs text-slate-400">40% Humanitarian / 60% General</span>
                                    </div>
                                </label>
                                <label
                                    class="flex items-center p-3 rounded-lg border border-slate-600 bg-slate-700/30 cursor-pointer hover:bg-slate-700/50 transition-colors">
                                    <input type="radio" name="sim-alloc" value="50"
                                        class="w-4 h-4 text-purple-500 bg-slate-800 border-slate-500 focus:ring-purple-500 focus:ring-2">
                                    <div class="ml-3">
                                        <span class="block text-sm font-bold text-white">Balanced Approach</span>
                                        <span class="block text-xs text-slate-400">50% Humanitarian / 50% General</span>
                                    </div>
                                </label>
                                <label
                                    class="flex items-center p-3 rounded-lg border border-slate-600 bg-slate-700/30 cursor-pointer hover:bg-slate-700/50 transition-colors">
                                    <input type="radio" name="sim-alloc" value="60"
                                        class="w-4 h-4 text-purple-500 bg-slate-800 border-slate-500 focus:ring-purple-500 focus:ring-2">
